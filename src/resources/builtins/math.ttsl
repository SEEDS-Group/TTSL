package math

public function min(a: Float, b: Float): Float {
    if(a < b) {
        return a;
    } else {
        return b;
    }
}

public function max(a: Float, b: Float): Float {
    if(a > b) {
        return a;
    } else {
        return b;
    }
}

public function sum(list: List<Float>): Float {
    var summe: Float = 0.0;
    for(var i: Int = 0; i < len(list); i = i + 1) {
        summe = summe + list[i];
    }
    return summe;
}
